---
 interface Props {
  link: string;
}

const {link} = Astro.props

import BadgeExperience from './BadgeExperience.astro'
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<div class="absolute w-3 h-3 bg-blue-300 rounded-full mt-1.5 -start-1.5 border border-blue-300 dark:border-gray-900 dark:bg-gray-700"></div>
<div class="flex gap-x-3 items-center">
    <h3 class="text-xl font-semibold text-blue-800 dark:text-sky-200">{t('experience.title')}</h3>
    <BadgeExperience> {t('experience.label')}</BadgeExperience>
</div>
    <time class=" text-sm font-semibold leading-none text-gray-400 dark:text-gray-500">{t('experience.date')}</time>
    <p class="my-4 text-base font-normal text-blue-900 dark:text-gray-400 text-pretty">{t('experience.description')}</p>
    
    <a href={link} target="_blank" class="inline-flex items-center px-4 py-2 text-sm font-medium text-white bg-sky-500 border border-sky-500 rounded-lg hover:bg-sky-200/40 hover:text-blue-800 transition-all dark:bg-blue-800 dark:text-white dark:border-blue-600 dark:hover:text-blue-500 dark:hover:bg-blue-800/40">
        {t('experience.button')}
        <svg class="w-3 h-3 ms-2 rtl:rotate-180" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9"/>
        </svg>
    </a>
    </svg></a>